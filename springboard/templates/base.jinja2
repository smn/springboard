{% import 'molecules.html' as molecules %}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      dir="{{ language|language_direction }}">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <link rel="shortcut icon" type="image/x-icon" href="{{'springboard:static/img/favicon.ico'|static_url}}" />
    <title>{{ title|default("Skeleton / Universal Core") }}</title>
    <meta name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0; user-scalable=0;" />
    <meta name="description" content="{{ description|default("") }}" />
    <meta name="keywords" content="{{ keywords|default("") }}" />
    <link href="{{'springboard:static/css/style.css'|static_url}}" rel="stylesheet" type="text/css" />
    <link href="{{'springboard:static/css/enhanced.css'|static_url}}" rel="stylesheet" type="text/css" />
</head>
<body>
    {{molecules.list_of_languages(language, display_languages)}}

    {{molecules.logo( 'springboard:static/img/logo000000.png', "")}}

    {% include 'auth.jinja2' %}

    <ul class="list-inline">
        <li><a href="/">{{gettext('Home')}}</a></li>
    {% for nav in main_navigation_items %}
        <li><a href="{{'category'|route_url(uuid=nav.uuid)}}">{{nav.title}}</a></li>
    {% endfor %}
    </ul>

    {% block content %}
    {% endblock %}

    {% block search %}
        {{molecules.search_box()}}
    {% endblock %}

    {{molecules.footer("Springboard 2015")}}

</body>
</html>
